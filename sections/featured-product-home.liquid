<div class="featured-product-section">
  <div class="featured-product-container">

    {% assign product = all_products[section.settings.product] %}
    
    <!-- Imagen destacada -->
    <div class="featured-product-image">
      {% if product %}
        <img src="{{ product.featured_image | img_url: '800x' }}" alt="{{ product.title }}">
      {% else %}
        <div style="background:#eee; height:400px; display:flex; align-items:center; justify-content:center;">Selecciona un producto</div>
      {% endif %}
    </div>

    <!-- Contenido personalizado -->
    <div class="featured-product-details">
      <h2 class="product-title">{{ section.settings.custom_title }}</h2>

      <div class="product-description">
        {{ section.settings.custom_description }}
      </div>

      {% if product and section.settings.show_price %}
        <div class="product-pricing">
          <span class="sale-price">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span class="original-price">{{ product.compare_at_price | money }}</span>
          {% endif %}
        </div>
      {% endif %}

      <a href="{{ section.settings.button_link | default: '#' }}" class="cta-button">
        {{ section.settings.button_label | default: 'Ver producto' }}
      </a>

      {% if section.settings.show_timer %}
        <div class="countdown-timer">
          <div class="timer-block"><span>00</span><p>DAYS</p></div>
          <div class="timer-block"><span>00</span><p>HOURS</p></div>
          <div class="timer-block"><span>00</span><p>MINS</p></div>
          <div class="timer-block"><span>00</span><p>SECS</p></div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.featured-product-section {
  padding: 100px 120px;
}

.featured-product-container {
  display: flex;
  flex-wrap: wrap;
  max-width: 1200px;
  margin: 0 auto;
}

/* Ambos contenedores al 50% en desktop/tablet */
.featured-product-image,
.featured-product-details {
  flex: 1 1 50%;
  box-sizing: border-box;
}

/* Imagen con efecto cover */
.featured-product-image {
  position: relative;
  height: 100%;
  min-height: 400px;
  overflow: hidden;
}

.featured-product-image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.featured-product-details {
  background: #f9f9f9;
  border: 15px solid #e0e0e0;
  padding: 40px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-title {
  font-size: 22px;
  font-weight: 600;
  margin-bottom: 16px;
  text-align: center;
}

.product-description {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20px;
  text-align: center;
}

.product-description * {
  margin-bottom: 1rem;
}

.product-pricing {
  font-size: 20px;
  margin-bottom: 20px;
}

.sale-price {
  color: #f4a900;
  font-weight: bold;
}

.original-price {
  color: #aaa;
  text-decoration: line-through;
  margin-left: 10px;
}

.cta-button {
  background: #000;
  color: white;
  padding: 12px 30px;
  text-transform: uppercase;
  text-align: center;
  display: inline-block;
  margin-bottom: 30px;
  text-decoration: none;
}

.countdown-timer {
  display: flex;
  gap: 10px;
}

.timer-block {
  background: white;
  border: 1px solid #eee;
  padding: 10px;
  text-align: center;
  width: 60px;
}

.timer-block span {
  font-weight: bold;
  font-size: 18px;
}

.timer-block p {
  font-size: 10px;
  margin: 0;
  color: #666;
}

/* Responsivo para móvil */
@media (max-width: 768px) {
  .featured-product-container {
    flex-direction: column;
  }

  .featured-product-section {
    padding: 80px 20px;
  }

  .featured-product-image,
  .featured-product-details {
    flex: 1 1 100%;
    min-height: auto;
  }

  .featured-product-image {
    height: auto;
    min-height: 300px;
  }

  .featured-product-image img {
    position: relative;
    height: auto;
    object-fit: contain;
  }
}
</style>

{% schema %}
{
  "name": "Featured Product Home",
  "tag": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Producto"
    },
    {
      "type": "text",
      "id": "custom_title",
      "label": "Título personalizado",
      "default": "Nombre del producto destacado"
    },
    {
      "type": "richtext",
      "id": "custom_description",
      "label": "Descripción personalizada"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del botón",
      "default": "Select Options"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace personalizado del botón"
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Mostrar precio",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_timer",
      "label": "Mostrar temporizador",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Producto destacado con descripción",
      "category": "Destacados"
    }
  ]
}
{% endschema %}
