<div class="home-banner-ct banners">
  <div class="container">
    <div class="wrap-bg">
      <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 static-image">
          <a href="{{ section.settings.link1 }}" title="{{ section.settings.link1.alt | default: shop.name }}">
            {% if section.settings.image1 != blank %}
            <img class="img-responsive lazyload" data-sizes="auto" src="{{ "icon-loadings.svg" | asset_url }}" alt="{{ section.settings.image1.alt | default: shop.name }}" data-src="{{ section.settings.image1 | img_url: 'master' }}" />
            {% else %}
            <img class="img-responsive" alt="{{ shop.name }}" src="//via.placeholder.com/370x340" />
            {% endif %}
          </a>
        </div>
        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 static-image2">   
          <a  class="img1" href="{{ section.settings.link2 }}" title="{{ section.settings.link2.alt | default: shop.name }}">
