{% assign ft-col1 		= section.settings.footer_co1_enable %}
{% assign ft-col2 		= section.settings.footer_co2_enable %}
{% assign ft-col3 		= section.settings.footer_co3_enable %}
{% assign ft-col4 		= section.settings.footer_co4_enable %}

{% assign ft_linklist_1 = section.settings.footer_linklist_1 %}
{% assign ft_linklist_2 = section.settings.footer_linklist_2 %}
{% assign ft_linklist_3 = section.settings.footer_linklist_3 %}
{% assign ft_linklist_4 = section.settings.footer_linklist_4 %}


{% assign show_container	= section.settings.show_container    %}
{% assign nav				= section.settings.owl_navigation  %}
{% assign margin			= section.settings.owl_margin  %}
{% assign autoplay			= section.settings.owl_autoplay  %}
{% assign autospeed			= section.settings.owl_autoplay_speed  %}
{% assign speed				= section.settings.owl_speed  %}
{% assign column1			= section.settings.column1  %}
{% assign column2 			= section.settings.column2  %}
{% assign column3 			= section.settings.column3  %}
{% assign column4 			= section.settings.column4  %}
{% assign column5 			= section.settings.column5  %}
{%- assign img_url = section.settings.bg_img_footer | img_url: 'master' -%}

<div class="footer-1"  style="background : {% if section.settings.bg_img_footer !=blank %}url('{{ img_url }}') no-repeat top center; background-size: cover;
          {%else%} {{section.settings.bg_color_footer}}{%endif%}">
 
  {% if section.settings.footer_top_enable %}
  <div class="footer-top">
    <div class="footer-main">
      <div class="container">
        <div class="footer-wrapper row">
          {% if ft-col1 %}
          <div class="col-lg-6">
            <div class="collapsed-block footer-block footer-address">
              {% if section.settings.footer_title_1 != blank %}
              <h3 class="footer-block-title"> {{ section.settings.footer_title_1 | split: '|' | first }}<span class="expander"><i class="fa fa-plus"></i></span></h3>
              {% endif %}
              <div class="footer-block-content">
                <ul class="links-contact">
                  <li class="address">
                    <span>{{ section.settings.footer_contact_address }}</span>
                  </li>
                   <li class="mail">
                    <span>{{ section.settings.footer_contact_email }}</span>
                  </li>
                   <li class="phone">
                    <span>{{ section.settings.footer_contact_phone }}</span>
                  </li>
                </ul>
                 {% if section.settings.footer_socials_enable %}
                <div class="socials-wraps"> 
                  <ul>
                    {% if settings.social_vimeo_link %}
                    <li class="dribbble"><a class="_blank" href="{{ settings.social_vimeo_link }}" target="_blank"><i class="fa fa-dribbble"></i></a></li>
                    {% endif %}
                    {% if settings.social_facebook_link %}
                    <li class="facebook"><a class="_blank" href="{{ settings.social_facebook_link }}" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    {% endif %}
                    {% if settings.social_twitter_link %}
                    <li class="twitter"><a class="_blank" href="{{ settings.social_twitter_link }}" target="_blank"><i class="fa fa-twitter"></i></a></li>
                    {% endif %}
                    {% if settings.social_google_link %}
                    <li class="google_plus"><a class="_blank" href="{{ settings.social_google_link }}" target="_blank"><i class="fa  fa-google-plus"></i></a></li>
                    {% endif %}

                    {% if settings.social_pinterest_link %}
                    <li class="pinterest"><a class="_blank" href="{{ settings.social_pinterest_link }}" target="_blank"><i class="fa fa-pinterest"></i></a></li>
                    {% endif %}
                  </ul>
                </div>  
                {% endif %}  

              </div>
            </div>
          </div>
          {% endif %}
              {% if ft-col2 %}
              <div class="col-lg-3 ft-2">
                <div class="collapsed-block footer-block footer-link">
                  {% if section.settings.footer_title_2 != blank %}
                  <h3 class="footer-block-title"> {{ section.settings.footer_title_2 | split: '|' | first }}<span class="expander"><i class="fa fa-plus"></i></span></h3>
                  {% endif %}
                  <ul class="footer-block-content">
                    {% for link in linklists[ft_linklist_2].links %}
                    <li>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                    {% endfor %}
                  </ul>
                </div>					
              </div>
              {% endif %} 
              {% if ft-col3 %}
              <div class="col-lg-3 ft-3">
                <div class="collapsed-block footer-block footer-link">
                  {% if section.settings.footer_title_3 != blank %}
                  <h3 class="footer-block-title"> {{ section.settings.footer_title_3 | split: '|' | first }}<span class="expander"><i class="fa fa-plus"></i></span></h3>
                  {% endif %}
                  <ul class="footer-block-content">
                    {% for link in linklists[ft_linklist_3].links %}
                    <li>
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                    {% endfor %}
                  </ul>
                </div>			
              </div>
              {% endif %}
        </div>
      </div>
    </div>
  </div>
	
  {% endif %}
   {% if section.settings.footer_newsletter_enable %}
  <div class="footer-center" >
    <div class="container">
      <div class="footer-newsletter">
        {% if section.settings.footer_title_newletter != blank %}
        <h3>{{ section.settings.footer_title_newletter | split: '|' | first }}</h3>
        {% endif %}

        <div class="footer-block-content">
          <div class="newsletter">
            {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
            <p class="form--success">{{ 'general.newsletter_form.confirmation' | t }}</p>
            {% else %}
            <div class="input-group">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="input-box">
                <input type="email"
                       name="contact[email]"
                       id="Email"
                       class="input-group__field newsletter__input"
                       value="{% if customer %}{{ customer.email }}{% endif %}"
                       placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"

                       >
              </div>
              <span class="input-group__btn">
                <button type="submit" class="btn newsletter__submit font-ct" name="commit" id="Subscribe">
                  <i class="fa fa-paper-plane" aria-hidden="true"></i>
                  <span class="newsletter__submit-text--large hidden">{{ 'general.newsletter_form.submit' | t }}</span>
                </button>
              </span>
            </div>
            {% endif %}
            {% endform %}
          </div>              
        </div>
      </div>
             
    </div>
  </div>
   {% endif %} 
	
   {% if section.settings.show_bottom %}
  <div class="footer-bottom">
    <div class="container">
      <div class="contain">
      <div class="row">
        {% if  section.settings.footer_about != blank %}
        <div class="col-sm-7 ft-copyright">
          <span>{{ section.settings.footer_about | split: '|' | first }}</span>
        </div>   
        {% endif %}
        {% if  section.settings.footer_show_pay  %}
        <div class="col-sm-5 ft-payment">
          <a href="{{ section.settings.link_pay }}" title="{{ section.settings.link_pay.alt | default: shop.name }}">
            {% if section.settings.img_payment_ft != blank %}
            <img class="img-payment lazyload" data-sizes="auto" src="{{ "icon-loadings.svg" | asset_url }}" alt="{{ section.settings.img_payment_ft.alt | default: shop.name }}" data-src="{{ section.settings.img_payment_ft | img_url: 'master' }}" />
            {% else %}
            <img class="img-payment lazyload" data-sizes="auto" src="{{ "icon-loadings.svg" | asset_url }}" alt="{{ shop.name }}" data-src="//via.placeholder.com/263x24" />
            {% endif %}
          </a>
        </div>
        {% endif %}
      </div>
      </div>
    </div>
  </div>
    {% endif %}

    {% if settings.gotop_enable %}
    <div id="goToTop" class="{% if settings.gotopmobile_enable %}{% else %}hidden-xs{% endif %}"><span></span></div>
    {% endif %}  
 
</div>
